module decode7 (
    input logic [3:0] num,
    output logic [7:0] leds );

    always_comb
        case (num)
            4'b0000: leds = 8'b01111110; // 0
            4'b0001: leds = 8'b00110000; // 1
            4'b0010: leds = 8'b01101101; // 2
            4'b0011: leds = 8'b01111001; // 3
            4'b0100: leds = 8'b00110011; // 4
            4'b0101: leds = 8'b01011011; // 5
            4'b0110: leds = 8'b01011111; // 6
            4'b0111: leds = 8'b01110000; // 7
            4'b1000: leds = 8'b01111111; // 8
            4'b1001: leds = 8'b01111011; // 9
            4'b1010: leds = 8'b01110111; // A
            4'b1011: leds = 8'b00011111; // b
            4'b1100: leds = 8'b01001110; // C
            4'b1101: leds = 8'b00111101; // d
            4'b1110: leds = 8'b01001111; // E
            4'b1111: leds = 8'b01000111; // F
            default: leds = 8'b00000000; // Default: All segments off
        endcase
endmodule
